{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "requireCleanWorkingDir": false,
    "commit": true,
    "tag": true,
    "push": true
  },
  "github": {
    "release": true,
    "releaseName": "chadfernandez-me@${version}"
  },
  "npm": false,
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits"
      },
      "infile": "CHANGELOG.md",
      "changelog": false
    }
  }
}
